  <%# /サービスを使う%>

</div>

<%= link_to new_select_path, class: 'purchase-btn' do %>
  <span class='purchase-btn-text'>どんな飲み会にしたい？</span>
  <%= image_tag 'icon-dish.jpg' , size: '185x50' ,class: "purchase-btn-icon" %>
